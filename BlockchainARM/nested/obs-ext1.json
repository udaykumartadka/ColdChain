{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "bmVMNamePrefix": {
            "type": "string"
        },
        "numBMs": {
            "type": "int"
        },
        "voterVMNamePrefix": {
            "type": "string"
        },
        "numVoters": {
            "type": "int"
        },
        "observerVMNamePrefix": {
            "type": "string"
        },
        "numObservers": {
            "type": "int"
        },
        "adminUsername": {
            "type": "string"
        },
        "ethereumAccountPsswd": {
            "type": "securestring"
        },
        "passphrase": {
            "type": "securestring"
        },
        "ethereumNetworkID": {
            "type": "int"
        },
        "gethIPCPort": {
            "type": "int"
        },
        "adminSitePort": {
            "type": "int"
        },
        "cakeshopFqdn": {
            "type": "string"
        },
        "cakeshopStartingPort": {
            "type": "int"
        },
        "artifactsLocationURL": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "apiVersionVirtualMachinesExtensions": "2016-03-30",
        "obNode": 2,
        "maxPeers": 25
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersionVirtualMachinesExtensions')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('observerVMNamePrefix'), copyIndex(), '/newuserscript')]",
            "copy": {
                "name": "observersConfigLoop",
                "count": "[parameters('numObservers')]"
            },
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[concat(parameters('artifactsLocationURL'), '/scripts/configure1.sh')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('/bin/bash configure1.sh \"', parameters('adminUsername'), '\" \"', parameters('ethereumAccountPsswd'), '\" \"', parameters('passphrase'), '\" \"', parameters('artifactsLocationURL'), '\" \"', parameters('ethereumNetworkID'), '\" \"', variables('maxPeers'), '\" \"', variables('obNode'), '\" \"', parameters('gethIPCPort'), '\" \"', parameters('numVoters'), '\" \"', parameters('voterVMNamePrefix'), '\" \"', parameters('numBMs'), '\" \"', parameters('bmVMNamePrefix'), '\" \"', parameters('numObservers'), '\" \"', parameters('observerVMNamePrefix'), '\" \"', copyIndex(), '\" \"', parameters('adminSitePort'), '\" \"', parameters('cakeshopFqdn'), '\" \"', parameters('cakeshopStartingPort'), '\"')]"
                }
            }
        }
    ]
}
